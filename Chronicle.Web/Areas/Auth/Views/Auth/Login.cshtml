@model Chronicle.Web.Areas.Auth.LoginViewModel 
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="login-logo">
    <a href="../../index2.html"><b>Audit Approval</b>Solution</a>
</div>
<div class="login-box-body">
    <div class="box-header with-border">
        <h1 class="box-title"> Please Login</h1>
    </div>
    <form action="/Auth/Login" method="post">
        <div class="form-group has-feedback">
            <label for="username">
                <i class="fa fa-solid fa-user" aria-hidden="true"></i>&nbsp;Username
            </label>
            <input asp-for="Username" id="Username" name="Username" type="email" class="form-control" placeholder="Email">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <label for="password">
                <i class="fa fa-solid fa-key" aria-hidden="true"></i>&nbsp;Password
            </label>
            <input asp-for="Password" id="Password" name="Password" type="password" class="form-control" placeholder="Password">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label>
                        <input type="checkbox"> Remember Me
                    </label>
                </div>
            </div><!-- /.col -->
            <div class="col-xs-4">
            </div><!-- /.col -->
        </div>

        <div class="row mt-15">
            <div class="col-xs-12">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Login</button>
            </div><!-- /.col -->

        </div>

        <div class="row mt-15">
            <div class="col-xs-12">
                <div class="pull-right hidden-xs">
                    <a href="#">I forgot my password</a><br>
                </div>

            </div><!-- /.col -->

        </div>
    </form>

    <div class="social-auth-links text-center">
        @*   <p>- OR -</p> *@
        @*  <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using Facebook</a>
        <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign in using Google+</a> *@
    </div><!-- /.social-auth-links -->
    @*    <a href="#">I forgot my password</a><br>
    <a href="register.html" class="text-center">Register a new membership</a> *@

</div><!-- /.login-box-body -->
@section Scripts {


}