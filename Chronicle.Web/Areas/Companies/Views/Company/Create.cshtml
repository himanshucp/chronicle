                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="email" class="required-field col-md-3 col-xs-12 control-label">Email</label>
                                    <div class="col-md-8 col-xs-12">
                                        <input type="text" asp-for="Email" name="Email" id="Email" class="form-control" value="@Model.Email" maxlength="191" style="width:100%; display:flex;">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="name" class="required-field col-md-3 control-label">Contact Person:</label>
                                    <div class="col-md-8 col-sm-12">
                                        <input type="text" asp-for="ContactPerson" class="form-control" id="ContactPerson" name="ContactPerson" value="@Model.ContactPerson" required>
                                        <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="form-group ">
                                    <label for="phone" class="col-md-3 control-label">Phone</label>
                                    <div class="col-md-7">
                                        <input class="form-control" asp-for="Phone" aria-label="phone" maxlength="191" name="Phone" type="text" id="Phone" value="@Model.Phone">
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="fax" class="col-md-3 control-label">Fax</label>
                                    <div class="col-md-7">
                                        <input class="form-control" asp-for="Fax" type="text" name="Fax" aria-label="fax" id="Fax" value="@Model.Fax">
                                        <span asp-validation-for="Fax" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label for="phone" class="col-md-3 control-label">Web Site</label>
                                    <div class="col-md-7">
                                        <input class="form-control" asp-for="WebSite" aria-label="WebSite" maxlength="191" name="WebSite" type="text" id="WebSite" value="@Model.WebSite">
                                        <span asp-validation-for="WebSite" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label for="phone" class="col-md-3 control-label">Tax Number</label>
                                    <div class="col-md-7">
                                        <input class="form-control" asp-for="TaxNumber" aria-label="TaxNumber" maxlength="191" name="TaxNumber" type="text" id="TaxNumber" value="@Model.TaxNumber">
                                        <span asp-validation-for="TaxNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label for="phone" class="col-md-3 control-label">License Number</label>
                                    <div class="col-md-7">
                                        <input class="form-control" asp-for="LicenseNumber" aria-label="LicenseNumber" maxlength="191" name="LicenseNumber" type="text" id="LicenseNumber" value="@Model.LicenseNumber">
                                        <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label for="phone" class="col-md-3 control-label">LicenseExpiryDate</label>
                                    <div class="col-md-7">
                                        <input class="form-control" asp-for="LicenseExpiryDate" style=" width:100%;" type="date" name="LicenseExpiryDate" aria-label="name" id="LicenseExpiryDate"
                                               value="@(Model.LicenseExpiryDate.HasValue ? Model.LicenseExpiryDate.Value.ToString("yyyy-MM-dd") : "")" />
                                      @*   <input asp-for="LicenseExpiryDate"
                                               type="text"
                                               class="form-control datepicker"
                                               style="width: 100%;"
                                               maxlength="191"
                                               required
                                               value="@(Model.LicenseExpiryDate.HasValue ? Model.LicenseExpiryDate.Value.ToString("yyyy-MM-dd") : "")"
                                               autocomplete="off" /> *@
                                        <span asp-validation-for="LicenseExpiryDate" class="text-danger"></span>


                                      
                                    </div>
                                </div>

                             
                           

