        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-sm-12 col-sm-offset-0">

            <form id="create-form" class="form-horizontal" method="post" action="@action" autocomplete="off" role="form" enctype="multipart/form-data" novalidate="novalidate">
                <input type="hidden" asp-for="CompanyID" name="CompanyID" aria-label="name" id="CompanyID" value="@Model.CompanyID">
                <input type="hidden" asp-for="TenantID" name="TenantID" aria-label="name" id="TenantID" value="@Model.TenantID">
                <!-- box -->
                <div class="box box-default">
                    <!-- box-header -->
                    <div class="box-header with-border">


                        <!-- box-body -->
                        <div class="box-body">

                            <div style="padding-top: 30px;">

                                <!-- CSRF Token -->
                                <input type="hidden" name="_token" value="CbzxZWFMTu4jPu5cawm2TiEDgINArBf87v9wmDL1" autocomplete="off">

                                <!-- Name -->
                                <div class="form-group ">
                                    <label for="name" class="required-field col-md-3 control-label">Company Name</label>
                                    <div class="col-md-8 col-sm-12">
                                        <input class="form-control" asp-for="Name" style=" width:100%;" type="text" name="Name" aria-label="name" id="Name" value="@Model.Name" required maxlength="191">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="name" class="required-field col-md-3 control-label">Location:</label>
                                    <div class="col-md-8 col-sm-12">
                                        <input type="text" asp-for="Location" class="form-control" id="Location" name="Location" value="@Model.Location" required>
                                        <span asp-validation-for="Location" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label for="name" class="col-md-3 control-label">Address:</label>
                                    <div class="col-md-8 col-sm-12">
                                        <textarea class="form-control valid" asp-for="Address" name="Address" id="Address" value="@Model.Address" placeholder="Add a address"
